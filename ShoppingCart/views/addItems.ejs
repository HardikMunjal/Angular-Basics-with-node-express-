                            <form id="well span8" action="action" enctype="multipart/form-data" method="POST">

                               

                                <div class="span3">
                                    <label>Product Id</label> <input class="span3" placeholder="Product Id" type="text" name="id" ng-model="Id">
                                    <br>
                                    <label>Product Name</label> <input class="span3" placeholder="Product Name" type="text" name="pro_name" ng-model="ProductName">
                                    <br>
                                    <label>Product Category</label> <input class="span3" placeholder="Category Name" type="text" name="category" ng-model="ProductCategory">
                                    <br>
                                    <label>Product SubCategory</label> <input class="span3" placeholder="Subcategory Name" type="text" name="subcategory" ng-model="ProductSubCategory">
                                    <br>
                                    <label>Brand</label> <input class="span3" placeholder="Brand Name" type="text" name="brand" ng-model="Brand">


                                    <div>
                                        <label for="inputImage2">Add Product Image</label>
                                        <input id="inputImage2" type="file" accept="image/*" name="image" image="image2" multiple="multiple" resize-max-height="300" resize-max-width="250" resize-quality="0.7" />
                                    </div>



                                  <label>Product Description</label> <input class="span3" placeholder="Product Description" type="text" name="description" ng-model="ProductDescription">  



                                    <label>MRP</label> <input class="span3" placeholder="MRP" type="text" name="mrp" ng-model="MRP">
                                    <label>Price</label> <input class="span3" placeholder="Price" type="text" name="price" ng-model="Price">

                                    <label>Quantity</label> <input class="span3" placeholder="Quantity" type="text" name="quantity" ng-model="Quantity">
                                    <label>Color</label> <input class="span3" placeholder="Color" type="text" name="color" ng-model="Color">
                                   <label>Size</label> <input class="span3" placeholder="Size" type="text" name="size" ng-model="Size">

                                    <label>Gender</label> <input class="span3" placeholder="Gender" type="text" name="gender" ng-model="Gender">


