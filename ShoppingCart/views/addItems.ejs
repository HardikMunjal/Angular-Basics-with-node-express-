    <option value=""></option>
    </select>



    <p><label class="field" for="Name"><span>*</span>Name:</label><input type="text" name="Name"</p>
    

      <li  ng-repeat= "categories in data.subcategories">
      {{categories.subcategory}}
      </li>

        <ul>

