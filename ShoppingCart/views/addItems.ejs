    <select ng-model="cat" ng-options="cat[0] as cat.MainCategory for cat in toddlers">
    <option value=""></option>
    </select>

    <p><label class="field" for="cat2">
    <span>*</span>
    Category Type:</label>
    <select ng-model="cat2" ng-options="cat2 as cat2.category[0].categoryName for cat2 in toddlers">
    <option value=""></option>
    </select>

    <p><label class="field" for="category3">
